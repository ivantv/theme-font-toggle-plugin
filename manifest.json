{
  "manifest_version": 3,
  "name": "Theme & Font Toggle Plugin",
  "version": "1.0.0",
  "description": "A lightweight plugin for managing theme and font preferences with local storage persistence",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Theme & Font Toggle",
    "default_icon": {
      "16": "icon-192.png",
      "32": "icon-192.png",
      "48": "icon-192.png",
      "128": "icon-512.png"
    }
  },
  
  "icons": {
    "16": "icon-192.png",
    "32": "icon-192.png",
    "48": "icon-192.png",
    "128": "icon-512.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["*.css", "*.js", "*.png", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "host_permissions": [
    "<all_urls>"
  ]
}
